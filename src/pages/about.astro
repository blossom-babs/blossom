  }
  .about-sidenav ul{
   /* list-style-type: none; */
   display: grid;
   gap: .4rem;
  }
  .about-sidenav ul li a, .about-sidenav ul li {
   text-decoration: none;
   color: #A37643;
   font-weight: 500;
   font-size: 14px;
  }
  .about-sidenav ul li a:hover {
   opacity: 0.7;
  }

